{% extends 'base.html.twig' %}

{% block title %}Rappel
{% endblock %}

{% block body %}
	<div class="container mx-auto p-24 flex flex-col text-xl">

		<h1 class="mb-6 text-3xl font-bold text-gray-800">{{ rappel.Titre }}</h1>
		<div class="mb-3 flex flex-col">
			<p class="py-2">{{ rappel.Description }}</p>

			<p class="py-2">{{ rappel.DateRappel| date('Y-m-d H:i:s') }}</p>

			<p class="py-2">{{ rappel.Categorie.Nom}}</p>

			<div class="flex w-1/4 justify-between py-2">
				{% if rappel.EstFait %}
					<p class="mx-4">Termin√©</p>
				{% else %}
					<p class="mx-4">En cours</p>
				{% endif %}
			</div>

			<a class="inline-block px-6 py-3 m-2 bg-blue-600 text-white font-medium leading-tight rounded-full shadow-md hover:bg-blue-500 hover:shadow-lg focus:outline-none focus:ring-2 focus:ring-blue-400 focus:ring-opacity-50 transition duration-300 ease-in-out" href="{{path('app_rappel_edit',{'id': rappel.id })}}">
				Modifier
			</a>
			<a class="inline-block px-6 py-3 m-2 bg-blue-600 text-white font-medium leading-tight rounded-full shadow-md hover:bg-blue-500 hover:shadow-lg focus:outline-none focus:ring-2 focus:ring-blue-400 focus:ring-opacity-50 transition duration-300 ease-in-out" href="{{path('app_rappel_delete',{'id': rappel.id })}}">
				Supprimer
			</a>

		</div>

	{% endblock %}
