{% extends 'base.html.twig' %}

{% block title %}Rappel
{% endblock %}

{% block body %}
	<div class="container mx-auto p-24 flex flex-col text-xl">

		<h1 class="mb-6 text-xl lg:text-3xl font-bold text-gray-800">Rappels</h1>

		<a class="text-sm lg:text-xl inline-block px-6 py-3 mb-2 bg-blue-800 text-white font-medium leading-tight rounded-full shadow-md hover:bg-blue-500 hover:shadow-lg focus:outline-none focus:ring-2 focus:ring-blue-400 focus:ring-opacity-50 transition duration-300 ease-in-out" href="{{ path('app_rappel_new') }}">+ Ajouter un rappel</a>

		<section class="flex flex-col">
			{% for rappel in rappels %}
				<a class="text-sm lg:text-xl inline-block h-16 truncate lg:h-fit  px-6 py-3 m-2 bg-blue-600 text-white font-medium leading-tight rounded-full shadow-md hover:bg-blue-500 hover:shadow-lg focus:outline-none focus:ring-2 focus:ring-blue-400 focus:ring-opacity-50 transition duration-300 ease-in-out" href="{{ path('app_rappel_show', {'id': rappel.id}) }}">{{ rappel.Titre }}</a>
			{% endfor %}
		</section>

	</div>
{% endblock %}
