{% extends 'base.html.twig' %}

{% block title %}Accueil des rappels
{% endblock %}

{% block body %}
	<div class="container mx-auto p-24 flex flex-col">
		<h1 class="mb-6 text-xl lg:text-3xl font-bold text-gray-800 mx-auto">Les rappels du jour</h1>

		<section class="flex flex-col">
			{% for rappel in rappels %}
				<a class="text-sm lg:text-xl inline-block h-16 truncate lg:h-fit px-6 py-4 m-2 bg-blue-600 text-white font-medium leading-tight rounded-full shadow-md hover:bg-blue-500 hover:shadow-lg focus:outline-none focus:ring-2 focus:ring-blue-400 focus:ring-opacity-50 transition duration-300 ease-in-out" href="{{ path('app_rappel_show', {'id': rappel.id}) }}">{{ rappel.Titre }}</a>
			{% endfor %}
		</section>
	</div>
{% endblock %}
